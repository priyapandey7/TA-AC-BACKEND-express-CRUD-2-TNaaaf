  <body>
    <form action="/articles/<%=article.id %>/edit" method="POST">
      <input type="text" name="title" id="" placeholder="Enter Title" value=<%=article.title %>   />
      <textarea
        name="description"
        id=""
        cols="30"
        rows="10"
        placeholder="Write Something"

      > <%=article.description %> </textarea>
